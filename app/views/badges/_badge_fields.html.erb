<div class="form-group">
  <%= f.label :name %>
  <%= f.input :name, input_html: {class: 'form-control'}, label: false %>
</div>

<div class="form-group">
  <%= f.label :skill %>
  <%= f.input :skill, collection: Skill.all.alphabetical.to_a, label: false, include_blank: true, input_html: {class: 'form-control'} %>
</div>

<div class="form-group">
  <%= f.label :level %>
  <%= f.input :level, label: false, input_html: {class: 'form-control'} %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.input :description, label: false, input_html: {class: 'form-control'} %>
</div>
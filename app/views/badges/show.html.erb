<div class="header" id="profile-header">
  <div class="header-body">
    <div class="header-title"><%= @badge.name %></div>
    <div class="header-subtitle">
      Badge<br/>
      Skillâ€”<%= @badge.skill.name %><br/><br/>
      <% if logged_in? && current_user.role?(:admin) %>
        <%= link_to 'Edit', edit_badge_path(@badge), class: "btn btn-primary btn-block btn-sm" %>
      <% end %>
    </div>
  </div>
</div>

<div class="row page-row">
  <div class="col">
    <div class="card page-card">
      <div class="card-body">
        <h5 class="card-title">Badge Details</h5>
        <p class="card-text">
          <b>Level:</b> <%= @badge.level %><br/><br/>
          <b>Description:</b> <%= @badge.description %>
        </p>
      </div>
    </div>

    <div class="card page-card">
      <div class="card-body">
        <h5 class="card-title">Tasks</h5>
        <div id="accordion">
          <% @tasks.each_with_index do |task, index| %>
            <div class="accordion-section">
              <a data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
                <div class="accordion-header" id="heading<%= index %>">
                  <h6 class="mb-0">
                    <%= task.name %>
                  </h6>
                </div>
              </a>

              <div id="collapse<%= index %>" class="collapse" aria-labelledby="heading<%= index %>" data-parent="#accordion">
                <div class="card-body">
                  <%= task.description %>
                  <% if logged_in? && current_user.role?(:admin) %>
                    <div class="row btn-group">
                      <div class="col">
                        <%= link_to "Edit Task", edit_task_path(task), class: "btn btn-primary btn-block btn-left btn-sm" %>
                      </div>
                      <div class="col">
                        <%= link_to 'Delete Task', task, method: :delete, data: {confirm: 'Are you sure you want to delete this task?'}, class: "btn btn-primary btn-block btn-left btn-sm" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div><br/>
        <% if logged_in? && current_user.role?(:admin) %>
          <%= link_to 'Add New Task', new_task_path, class: "btn btn-primary btn-block btn-left btn-sm" %>
        <% end %>
      </div>
    </div>

    <% if logged_in? && current_user.role?(:admin) %>
      <div class="row btn-group">
        <div class="col">
          <%= link_to 'Delete Badge', @badge, method: :delete, data: {confirm: 'Are you sure you want to delete this badge?'}, class: "btn btn-primary btn-block btn-left" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="pad-bottom">
</div>


<div class="row main-view barn-header" id="admin-camp-view">
  <div class="header">
    <%= link_to 'Back', :back, class: "back-btn" %>
    <div class="btn-wrapper">
      <%= link_to '+ Add New Badge', new_badge_path, class: "btn-sm btn-primary btn-block" %>
    </div>
  </div>
  <div class="header-text">
    <h2 class="header-title">Badges</h2>
    <div class="header-subtitle">
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"></h5>
      <p class="card-text">
      <table>
        <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th>Description</th>
          <th>Skill</th>
          <!-- <th colspan="3"></th> -->
        </tr>
        </thead>

        <tbody>
        <% @badges.each do |badge| %>
          <tr>
            <td>
              <%= link_to badge do %>
                <%= badge.name %>
              <% end %>
            </td>
            <td><%= badge.level %></td>
            <td><%= badge.description %></td>
            <td><%= badge.skill.name %></td>
            <td><%= link_to 'Edit', edit_badge_path(badge) %></td>
            <td><%= link_to 'Destroy', camp_badge_path(badge), method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </p>
    </div>
  </div>

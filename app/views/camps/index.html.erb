<p id="notice"><%= notice %></p>

<h1>Camps</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Program</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Active</th>
    <th>Location</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @camps.each do |camp| %>
    <tr>
      <td><%= camp.name %></td>
      <td><%= camp.program %></td>
      <td><%= camp.start_date %></td>
      <td><%= camp.end_date %></td>
      <td><%= camp.active %></td>
      <td><%= camp.location %></td>
      <td><%= link_to 'Show', camp %></td>
      <td><%= link_to 'Edit', edit_camp_path(camp) %></td>
      <td><%= link_to 'Destroy', camp, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>


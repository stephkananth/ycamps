<div class="header" id="profile-header">
  <div class="header-body">
    <div class="header-title"><%= @skill.name %></div>
    <div class="header-subtitle">
      Skill<br/>
      <%= @skill.category %><br/><br/>
      <%= link_to 'Edit', edit_skill_path(@skill), class: "btn btn-primary btn-block btn-sm" %>
    </div>
  </div>
</div>

<div class="row page-row">
  <div class="col">
      <div class="card page-card">
        <div class="card-body">
          <h5 class="card-title">Badges</h5>
          <p class="card-text">
            <% if @skill.badges.count != 0 %>
              <table class="table">
                <tbody>
                <% @skill.badges.each do |badge| %>
                  <tr>
                    <td>
                      <%= link_to badge do %>
                        <%= badge.name %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            <% else %>
              <%= @skill.name %> currently does not have any badges. <br/>
            <% end %>
          </p>
        </div>
      </div>

    <div class="row btn-group">
      <div class="col">
        <%= link_to 'Add New Badge', new_badge_path, class: "btn btn-primary btn-block btn-right" %>
      </div>
      <div class="col">
        <%= link_to 'Delete Skill', @skill, method: :delete, data: {confirm: 'Are you sure you want to delete this skill?'}, class: "btn btn-primary btn-block btn-left" %>
      </div>
    </div>
  </div>
</div>

<div class="pad-bottom">
</div>


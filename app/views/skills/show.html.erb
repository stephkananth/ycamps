<div class="row main-view profile-header">
  <div class="header"></div>
  <%= link_to 'Back', :back %>
  <div class="btn-wrapper">
    <%= link_to '+ Add New Badge', new_badge_path, class: "btn-sm btn-primary btn-block" %>
  </div>
  <div class="header-text">
    <h2 class="header-title"><%= @skill.name %></h2>
    <div class="header-subtitle">
      <%= @skill.category %>
    </div>
  </div>
  <%= link_to 'Edit Skill', edit_skill_path(@skill), class: "btn btn-primary btn-block" %>
  <%= link_to 'Delete Skill', @skill, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-primary btn-block" %>
  <div>
    <%= render :partial => "partials/badge_list", locals: {badges: @badges} %>
    <%#= render :partial => "partials/camps_short_list", locals: {camps: @upcoming_camps, state: "Upcoming"} %>
    <%#= render :partial => "partials/camps_short_list", locals: {camps: @past_camps, state: "Past"} %>
  </div>
</div>

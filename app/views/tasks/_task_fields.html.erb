<div class="form-group">
  <%= f.label :name %>
  <%= f.input :name, input_html: {class: 'form-control'}, label: false %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.input :description, input_html: {class: 'form-control'}, label: false %>

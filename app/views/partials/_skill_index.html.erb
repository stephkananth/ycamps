<div class="card">
  <div class="card-body">
    <h5 class="card-title">Skills</h5>
    <p class="card-text">

      <table>
        <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @skills.each do |skill| %>
          <tr>
            
            <td>
              <%= link_to skill do %>
                <%= skill.name %>
              <% end %>
            </td>
            <td><%= skill.category %></td>
            <td></td>
            <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
            <td><%= link_to 'Destroy', skill, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </p>
  </div>
</div>
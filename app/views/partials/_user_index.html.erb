<div class="card">
  <div class="card-body">
    <h5 class="card-title">Skills</h5>
    <p class="card-text">

      <table>
        <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user do %>
                <%= user.first_name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </p>
  </div>
</div>